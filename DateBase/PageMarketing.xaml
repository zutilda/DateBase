<Page x:Class="DateBase.PageMarketing"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DateBase"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageMarketing">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Center">
            <TextBlock Name="tb" FontSize="24" Text="Получите скидку за отзыв о вашем мероприятии!"  Foreground="DarkSlateBlue"/>
        </StackPanel>
        <Button x:Name="btn" Grid.Row="1" Content="Оставить заявку" Background="#483d8b "  Template="{StaticResource btnMarketing}"/>
        <Image Grid.Row="2" Name="logotip" Source="image\logotip.png"  Height="160" Width="300"/>
     </Grid>
</Page>
