<Page x:Class="DateBase.PageAuth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DateBase"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAuth">

    <Grid>
        <StackPanel>
            <StackPanel>
                <TextBlock Text="Авторизация" FontSize="18"/>
            </StackPanel>
            <StackPanel>
                <GroupBox Header="Введите логин" FontSize="24">
                    <TextBox Name="autoLogin"  Height="30">admin</TextBox>
                </GroupBox>
                <GroupBox Header="Введите пароль" FontSize="24">
                    <PasswordBox Name="autoPassword" Height="30" Password="Admin_12"/>
                </GroupBox>
            </StackPanel>
            <Button Name="btnEntr" Content="Войти" Template="{StaticResource btnPage}" Click="btnEntr_Click"/>
        </StackPanel>
    </Grid>
</Page>
